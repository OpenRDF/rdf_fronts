<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd  
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd  
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
	
	<!-- 参照地址： http://www.cnblogs.com/wj-wangjun/archive/2009/10/21/1587624.html  -->
	
	<!-- database connect pool -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<!-- database driver -->
		<property name="driverClass" value="com.mysql.jdbc.Driver"></property>
		<!-- database URL -->
		<property name="jdbcUrl" value="jdbc:mysql://127.0.0.1:3306/openrdf?characterEncoding=utf-8" />
		<!-- MySql user -->
		<property name="user" value="root"></property>
		<!-- MySql password -->
		<property name="password" value="root"></property>
		<!-- initialize database connect pool  -->
		<property name="initialPoolSize" value="10"></property>
		<!-- minimum pool size -->
		<property name="minPoolSize" value="3"></property>
		<!-- Maximum pool size -->
		<property name="maxPoolSize" value="25" />
		<!-- maximum idle time, default 0(s), never drop -->
		<property name="maxIdleTime" value="60"></property>
		<!-- acquireIncrement -->
		<property name="acquireIncrement" value="5" />
		<!-- acquireRetryAttempts -->
		<property name="acquireRetryAttempts" value="30" />
		<!-- idleConnectionTestPeriod -->
		<property name="idleConnectionTestPeriod" value="60" />
	</bean>
	
	<!-- 依赖注入数据源，注入上面定义的dataSource -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<!-- dataSource -->
		<property name="dataSource" ref="dataSource"></property>
		<!-- 以下用来列出Hibernate映射文件 -->
		<property name="mappingResources">
			<list>
				<value>com/openrdf/beans/User.hbm.xml</value>
				<value>com/openrdf/beans/UserLogin.hbm.xml</value>
				
				
				
			</list>
		</property>
		
		<!-- 定义Hibernate的SessionFactory的属性 -->
		<property name="hibernateProperties">
			<props>
				<!-- 指定数据库方言 -->
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
				<!-- 显示Hibernate持久化操作所生成的SQL -->
				<prop key="hibernate.show_sql">false</prop>
				<!-- 将SQL脚本进行格式化后再输出 -->
				<prop key="hibernate.format_sql">false</prop>
				<prop key="hibernate.use_sql_comments">true</prop>
				<prop key="current_session_context_class">thread</prop>
			</props>
		</property>
	</bean>
